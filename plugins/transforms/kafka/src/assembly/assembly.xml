<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 http://maven.apache.org/xsd/assembly-2.2.0.xsd">
    <id>hop-transform-kafka</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>.</baseDirectory>
    <files>
        <file>
            <source>${project.basedir}/src/main/resources/version.xml</source>
            <outputDirectory>plugins/transforms/kafka</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/dependencies.xml</source>
            <outputDirectory>plugins/transforms/kafka</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/samples</directory>
            <outputDirectory>config/projects/samples/</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.apache.hop:hop-transform-kafka:jar</include>
            </includes>
            <outputDirectory>plugins/transforms/kafka</outputDirectory>
        </dependencySet>
        <dependencySet>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.apache.hop:hop-transform-kafka:jar</exclude>
                <exclude>io.confluent:common-utils:jar</exclude>
                <exclude>org.yaml:snakeyaml:jar</exclude>
            </excludes>
            <outputDirectory>plugins/transforms/kafka/lib</outputDirectory>
        </dependencySet>
        <dependencySet>
            <scope>provided</scope>
            <includes>
                <include>org.apache.kafka:kafka-clients:jar</include>
                <include>org.apache.avro:avro:jar</include>
                <include>com.google.guava:guava:jar</include>
                <include>com.github.luben:*:jar</include>
                <include>org.lz4:*:jar</include>
                <include>org.xerial.snappy:*:jar</include>
                <include>io.confluent:common-utils:jar</include>
                <include>org.yaml:snakeyaml:jar</include>
            </includes>
            <outputDirectory>lib/core</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>