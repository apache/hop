<hop-engines>

  <hop-engine id="Local">
    <description>Local pipeline engine</description>
    <tooltip>Executes your pipeline locally in a multi-threaded fashion</tooltip>
    <classname>org.apache.hop.pipeline.engines.local.LocalPipelineEngine</classname>
  </hop-engine>

  <hop-engine id="Remote">
    <description>Remote pipeline engine</description>
    <tooltip>Executes your pipeline on a remote Hop server</tooltip>
    <classname>org.apache.hop.pipeline.engines.remote.RemotePipelineEngine</classname>
  </hop-engine>

