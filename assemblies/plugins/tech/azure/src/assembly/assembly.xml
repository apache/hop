  <id>hop-assemblies-plugins-tech-azure</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>tech/azure</baseDirectory>
  <files>
    <file>
      <source>${project.basedir}/src/main/resources/version.xml</source>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
