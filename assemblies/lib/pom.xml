  <build>
    <plugins>
      <plugin>
      <artifactId>maven-dependency-plugin</artifactId>
      <executions>
      <execution>
        <id>copy-libs</id>
        <phase>generate-resources</phase>
        <goals>
          <goal>copy-dependencies</goal>
        </goals>
        <configuration>
          <includeScope>compile</includeScope>
          <outputDirectory>${assembly.dir}</outputDirectory>
        </configuration>
      </execution>
      </executions>
      </plugin>
    </plugins>
