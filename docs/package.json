{
  "name": "hop-website",
  "version": "1.0.0-SNAPSHOT",
  "license": "Apache-2.0",
  "scripts": {
    "build:antora": "antora --clean --fetch site.yml",
    "build:hugo": "hugo",
    "build": "run-s build:*",
    "preview": "run-s preview:*",
    "preview:antora": "antora site.yml",
    "preview:hugo": "hugo server -D",
    "check:xref": "antora --generator @antora/xref-validator site.yml",
    "check:links": "link-checker --disable-external --mkdocs --allow-hash-href public",
    "check:html": "html-validate 'public/*/**/*.html' 'public/!(google)*.html'",
    "checks": "run-s check:*"
  },
  "devDependencies": {
    "@antora/cli": "2.3",
    "@antora/site-generator-default": "~2.3",
    "@antora/xref-validator": "gitlab:antora/xref-validator",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "~5.0",
    "html-validate": "~1.13",
    "hugo-cli": "~0.11",
    "link-checker": "~1.3",
    "npm-run-all": "^4.1.5",
    "opal-runtime": "1.0.11"
  },
  "installConfig": {
    "pnp": true
  },
  "dependencies": {
    "asciidoctor": "^2.0.3",
    "handlebars": "~4.4",
    "toml": "~3.0",
    "unzipper": "~0.10",
    "yaml": "~1.7"
  }
}
